{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C Program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true, // 외부 터미널 사용
            "preLaunchTask": "C/C++: gcc.exe 활성 파일 빌드", // 빌드 작업 이름
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "ignoreFailures": true,
                    "text": "-enable-pretty-printing"
                }
            ],
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe", // GDB 경로
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
